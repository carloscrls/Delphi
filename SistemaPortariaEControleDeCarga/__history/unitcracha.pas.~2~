procedure Tfrmcracha.Edit2Change(Sender: TObject);
begin
DMUNT.adodscracha.close;
DMUNT.adodscracha.CommandText:=('select * from cracha where ncracha  like '+'''%'+edit2.Text+'%'+''''+'');
